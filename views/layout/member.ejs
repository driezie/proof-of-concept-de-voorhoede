<!DOCTYPE html>
<html lang="nl">
  <%- include('../components/head', pageTitle = "Onze leden") %>
    <article class="container">
        <%- include('../components/header') %>

        <section class="hero">
          <article class="content">
            <h1><%= data.title %></h1>
            <p>
              <% if (data.vacancies && data.vacancies.length) { %>
                Aantal vacatures: <%= data.vacancies.length %> 路
            <% } %>


              <% if (data.colleagues) { %>
                Collega's: <%= data.colleagues %>+ 路
              <% } %>

              <% if (data.email) { %>
                Email: <a class="line-animation" href="mailto:<%= data.email %>"><%= data.email %></a> 路
              <% } %>

              <% if (data.phone) { %>
                Telefoon: <a class="line-animation" href="tel:<%= data.phone %>"><%= data.phone %></a> 路
              <% } %>

              <% if (data.kvk) { %>
                Kvk: <%= data.kvk %>
              <% } %>
            </p>
          </article>
        </section>

        <section class="block with-image justify-content-between">
          <article class="content">
            <ul class="grid grid3x">
              <li>
                <div class="description">
                  <%- data.description || "<p>Er is momenteel geen beschrijving voor dit bedrijf.</p>" %>
                </div>
              </li>
            </ul>
          </article>
          <% if (data.photo && data.photo.id) { %>
          <div class="block-banner">
            <picture>
              <img src="https://fdnd-agency.directus.app/assets/<%= data.photo.id %>" alt="<%= data.title %>" width="<%= data.photo.width %>" height="<%= data.photo.height %>">
            </picture>
          </div>
          <% } %>
        </section>

        <% if (data.vacancies && data.vacancies.length) { %>
        <section class="hero" id="vacancies">
          <article class="content">
            <h1><%= data.vacancies.length %> open vacatures</h1>
          </article>
        </section>

        <section class="block vacancies">
          <article class="content">
              <div class="vacancies">
                <ul>
                  <% data.vacancies.forEach(item => { %>
                    <%- include('../components/cards/vacancy', { item: item }) %>
                  <% }) %>
                </ul>
              </div>

          </article>
        </section>
        <% } %>

        <section class="block">
          <article class="content justify-content-between">
            <a aria-label="Terug naar overzicht" style="padding-inline-start: 0; padding-inline-end: 0;" class="btn secondary line-animation" href="/members">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
               Ga terug naar overzicht
            </a>

            <a aria-label="Terug naar overzicht" style="padding-inline-start: 0; padding-inline-end: 0;" class="btn secondary line-animation" href="/member/next/<%= data.id %>">

               Naar volgende lid
               <svg style="rotate: 180deg" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </article>
        </section>

        <%- include('../components/footer') %>
    </div>
  </body>
</html>
